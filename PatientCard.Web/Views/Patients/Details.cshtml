@model PatientCard.Web.ViewModels.JournalViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Patient</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(vm=>vm.Patient.Name)
        </dt>

        <dd>
            @Html.DisplayFor(vm=>vm.Patient.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(vm=>vm.Patient.Iin)
        </dt>

        <dd>
            @Html.DisplayFor(vm=>vm.Patient.Iin)
        </dd>

    </dl>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Patient.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(vm=>vm.Diagnosis)
        </th>
        <th>
            @Html.DisplayNameFor(vm=>vm.DateVisit)
        </th>
        <th></th>
    </tr>

    @foreach (var item in (IEnumerable<PatientCard.Model.Journal>)ViewBag.Journals)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnosis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateVisit)
            </td>
            <td>
                <a href="@Url.Action("Edit","Journals", new { id=item.Id})">Edit</a> |
                @Html.ActionLink("Details", "/Journals/Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "/Journals/Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>


















































